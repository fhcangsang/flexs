<!--pages/order/order.wxml-->
<view class='header'>
  <view class='' bindtap='all_order' data-index='1'>全部订单</view>
  <view class='' bindtap='unfinished' data-index='2'>未完成订单</view>
  <view class='' bindtap='finished' data-index='3'>已完成订单</view>
</view>
<view class='border_style {{border_style}} {{border_left}}'></view>
<view class='order_info'>
  <view class='{{order_index == 1 ? "order_display" : ""}}'>全部</view>
  <view class='{{order_index == 2 ? "order_display" : ""}}'>未完成</view>
  <view class='{{order_index == 3 ? "order_display" : ""}}'>已完成</view>
</view>