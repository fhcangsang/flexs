/**index.wxss**/
.nav_left{
  width: 30%;
  float: left;
  background-color: rgb(241, 242, 243);
  position: fixed;
  height: 100%;
}
.nav_left view{
  font-size: 17px;
  padding: 10% 0;
  text-align: center;
  background-color: rgb(241, 242, 243);
}
.right{
  width: 70%;
  float: right;
  background-color: #fff;
}
.product_li{
  width: 100%;
  float: left;
  padding: 5% 0;
  border-bottom: 1px solid rgb(215, 226, 211);
  position: relative;
}
.product_li .number{
  position: absolute;
  left: 5px;
  top: 0;
  background-color: red;
  color: #fff;
  width: 20px;
  height: 20px;
  line-height: 20px;
  font-size: 16px;
  border-radius: 50%;
  text-align: center;
  display: none;
}
.product_li .number_display{
  display: block;
}
.photo{
  width: 40%;
  height: 130rpx;
  float: left;
  box-sizing: border-box;
  padding-left: 6%;
}
.info{
  width: 60%;
  float: right;
  padding-left:6%; 
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
  display: block
}
.nav_left .select{
  background-color: #fff;
}
.make_icon{
  margin: 15px;
  margin-top: 100px; 
}
.make_icon image{
  border-radius: 50%;
  height: 150rpx;
}
.cart_icon{
  margin: 15px;
  margin-top: 0px; 
  position: relative;
}
.cart_icon .number{
  position: absolute;
  left: 60px;
  top: 0;
  background-color: red;
  color: #fff;
  width: 22px;
  height: 3px;
  border-radius: 50%;
  text-align: center;
  line-height: 3px;
  display: none;
  font-size: 15px;
  font-weight: 600;
}
.cart_icon .display{
  display: block;
}
.cart_icon image{
  border-radius: 50%;
  height: 150rpx;
}
.bottom_carts{
  width: 100%;
  position: fixed;
  bottom: 0;
  display: none;
  background-color: #fff;
  max-height: 300px;
  overflow: auto;
}
.bottom_carts .erro{
  position: fixed;
  bottom: 36px;
  background-color: #fff;
  text-align: center;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  color: red;
  display: none;
}
.bottom_carts .none{
  display: block;
}
.bottom_carts .head{
  width: 100%;
  float: left;
  padding: 5px;
  box-sizing: border-box;
  background-color: rgb(213, 214, 210);
  border-top: 1px solid rgb(151, 150, 150);
  box-shadow: 0 -1px 5px rgba(179, 182, 176, 0.897);
}
.bottom_carts .head .left{
  float: left;
}
.bottom_carts .head .delete_icon{
  width: 25px;
  height: 25px;
  float: right;
  margin-right: 10px;
}
.bottom_carts .content{
  width: 100%;
  float: left;
}
.bottom_carts .content .content_product{
  width: 100%;
  float: left;
  border-bottom: 1px solid rgb(230, 229, 224);
}
.bottom_carts .content .content_product:nth-last-child(1){
  margin-bottom: 35px;
}
.bottom_carts .content .content_product > view{
  float: left;
  margin:10px 0;
  padding: 0 10px;
  font-size: 15px;
}
.bottom_carts .content .content_product .reduce{
  float: right;
  margin:10px 10px 10px 0;
  border: 1px solid rgb(226, 219, 219); 
  border-radius: 0 20% 20% 0;
  color: red;
}
.bottom_carts .content .content_product .num{
  float: right;
  border-top: 1px solid rgb(226, 219, 219); 
  border-bottom: 1px solid rgb(226, 219, 219);
}
.bottom_carts .content .content_product .add{
  float: right;
  border: 1px solid rgb(226, 219, 219); 
  border-radius: 20% 0  0 20%;
  color: red;
}
.bottom_carts .content .content_product .price{
  color: red;
  float: right;
}
.bottom_carts .foot{
  width: 100%;
  float: left;
  background-color: rgb(213, 214, 210);
  position: fixed;
  bottom: 0;
}
.bottom_carts .foot view{
  float: left;
}
.bottom_carts .foot .icon{
  width: 25px;
  height: 25px;
  overflow: hidden;
  margin: 5px 5px 5px 15px;
}
.bottom_carts .foot .price{
  padding: 5px 10px;
  color: red;
}
.bottom_carts .foot .icon image{
  width: 50px;
  height: 50px;
  position: relative;
  top: -11px;
  left: -13px;
}
.bottom_carts .foot .submit{
  float: right;
  margin-right: 3px;
  color: #fff;
  background-color: black;
  padding: 5px;
}
.cover{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: black;
  opacity: 0.1;
  display: none;
}
.carts_class{
  display: block;
  z-index: 20
}
.cover_class{
  display: block;
  z-index: 10
}